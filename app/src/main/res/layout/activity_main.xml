<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/static_fragment_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Static Fragment Example"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/dynamic_fragment_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Dynamic Fragment Example"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/fragment_to_activity_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Fragment to Activity Transaction"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/fragment_to_fragment_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Fragment to Fragment Transaction"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</LinearLayout>